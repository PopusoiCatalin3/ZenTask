<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Colors -->
    <Color x:Key="PrimaryColor">#24d4c4</Color>
    <!-- Teal instead of indigo -->
    <Color x:Key="PrimaryLightColor">#92f0e6</Color>
    <!-- Light teal -->
    <Color x:Key="PrimaryDarkColor">#008c7e</Color>
    <!-- Dark teal -->
    <Color x:Key="AccentColor">#24d4c4</Color>
    <!-- Teal accent instead of pink -->
    <Color x:Key="TextPrimaryColor">#212121</Color>
    <Color x:Key="TextSecondaryColor">#757575</Color>
    <Color x:Key="DividerColor">#BDBDBD</Color>
    <Color x:Key="BackgroundColor">#F5F5F5</Color>
    <Color x:Key="CardBackgroundColor">#FFFFFF</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>

    <!-- Priority Colors -->
    <Color x:Key="UrgentColor">#D32F2F</Color>
    <Color x:Key="HighColor">#F57C00</Color>
    <Color x:Key="MediumColor">#FBC02D</Color>
    <Color x:Key="LowColor">#388E3C</Color>

    <!-- Priority Brushes -->
    <SolidColorBrush x:Key="UrgentBrush" Color="{StaticResource UrgentColor}"/>
    <SolidColorBrush x:Key="HighBrush" Color="{StaticResource HighColor}"/>
    <SolidColorBrush x:Key="MediumBrush" Color="{StaticResource MediumColor}"/>
    <SolidColorBrush x:Key="LowBrush" Color="{StaticResource LowColor}"/>

    <!-- Category Colors -->
    <Color x:Key="WorkColor">#008c7e</Color>
    <!-- Dark teal instead of pink -->
    <Color x:Key="PersonalColor">#4CAF50</Color>
    <!-- Green -->
    <Color x:Key="StudyColor">#24d4c4</Color>
    <!-- Teal instead of blue -->
    <Color x:Key="HealthColor">#9575fa</Color>
    <!-- Purple from base theme -->
    <Color x:Key="FinanceColor">#FF9800</Color>
    <!-- Orange -->

    <!-- Category Brushes -->
    <SolidColorBrush x:Key="WorkBrush" Color="{StaticResource WorkColor}"/>
    <SolidColorBrush x:Key="PersonalBrush" Color="{StaticResource PersonalColor}"/>
    <SolidColorBrush x:Key="StudyBrush" Color="{StaticResource StudyColor}"/>
    <SolidColorBrush x:Key="HealthBrush" Color="{StaticResource HealthColor}"/>
    <SolidColorBrush x:Key="FinanceBrush" Color="{StaticResource FinanceColor}"/>

    <Color x:Key="FilterLabelColor">#212121</Color>
    <Color x:Key="SectionHeaderColor">#212121</Color>
    <Color x:Key="ControlTextColor">#212121</Color>

    <!-- Additional Functional Colors -->
    <Color x:Key="ShadowColor">#33000000</Color>
    <Color x:Key="HoverOverlayColor">#10000000</Color>
    <Color x:Key="PressedOverlayColor">#20000000</Color>

    <!-- Functional Brushes -->
    <SolidColorBrush x:Key="FilterLabelBrush" Color="{StaticResource FilterLabelColor}"/>
    <SolidColorBrush x:Key="SectionHeaderBrush" Color="{StaticResource SectionHeaderColor}"/>
    <SolidColorBrush x:Key="ControlTextBrush" Color="{StaticResource ControlTextColor}"/>
</ResourceDictionary>