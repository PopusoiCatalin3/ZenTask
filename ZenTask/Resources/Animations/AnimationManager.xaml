<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Duration Resources  -->
    <Duration x:Key="DurationVeryShort">0:0:0.1</Duration>
    <Duration x:Key="DurationShort">0:0:0.2</Duration>
    <Duration x:Key="DurationMedium">0:0:0.3</Duration>
    <Duration x:Key="DurationLong">0:0:0.5</Duration>
    <Duration x:Key="DurationVeryLong">0:0:0.8</Duration>

    <!--  Easing Functions  -->
    <PowerEase
        x:Key="PowerEaseOut"
        EasingMode="EaseOut"
        Power="3" />
    <PowerEase
        x:Key="PowerEaseIn"
        EasingMode="EaseIn"
        Power="3" />
    <PowerEase
        x:Key="PowerEaseInOut"
        EasingMode="EaseInOut"
        Power="3" />
    <BackEase
        x:Key="BackEaseOut"
        Amplitude="0.3"
        EasingMode="EaseOut" />
    <ElasticEase
        x:Key="ElasticEaseOut"
        EasingMode="EaseOut"
        Oscillations="1"
        Springiness="3" />

    <!--  Core Animations  -->

    <!--  Fade Animations  -->
    <Storyboard x:Key="FadeIn">
        <DoubleAnimation
            EasingFunction="{StaticResource PowerEaseOut}"
            Storyboard.TargetProperty="Opacity"
            From="0"
            To="1"
            Duration="{StaticResource DurationMedium}" />
    </Storyboard>

    <Storyboard x:Key="FadeOut">
        <DoubleAnimation
            EasingFunction="{StaticResource PowerEaseIn}"
            Storyboard.TargetProperty="Opacity"
            From="1"
            To="0"
            Duration="{StaticResource DurationMedium}" />
    </Storyboard>

    <!--  Scale Animations  -->
    <Storyboard x:Key="ScaleIn">
        <DoubleAnimation
            EasingFunction="{StaticResource BackEaseOut}"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
            From="0.8"
            To="1"
            Duration="{StaticResource DurationMedium}" />
        <DoubleAnimation
            EasingFunction="{StaticResource BackEaseOut}"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
            From="0.8"
            To="1"
            Duration="{StaticResource DurationMedium}" />
        <DoubleAnimation
            EasingFunction="{StaticResource PowerEaseOut}"
            Storyboard.TargetProperty="Opacity"
            From="0"
            To="1"
            Duration="{StaticResource DurationMedium}" />
    </Storyboard>

    <Storyboard x:Key="ScaleOut">
        <DoubleAnimation
            EasingFunction="{StaticResource PowerEaseIn}"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
            From="1"
            To="0.8"
            Duration="{StaticResource DurationMedium}" />
        <DoubleAnimation
            EasingFunction="{StaticResource PowerEaseIn}"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
            From="1"
            To="0.8"
            Duration="{StaticResource DurationMedium}" />
        <DoubleAnimation
            EasingFunction="{StaticResource PowerEaseIn}"
            Storyboard.TargetProperty="Opacity"
            From="1"
            To="0"
            Duration="{StaticResource DurationMedium}" />
    </Storyboard>

    <!--  Button Animations  -->
    <Storyboard x:Key="ButtonClick">
        <DoubleAnimation
            AutoReverse="True"
            EasingFunction="{StaticResource PowerEaseInOut}"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
            From="1"
            To="0.95"
            Duration="{StaticResource DurationVeryShort}" />
        <DoubleAnimation
            AutoReverse="True"
            EasingFunction="{StaticResource PowerEaseInOut}"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
            From="1"
            To="0.95"
            Duration="{StaticResource DurationVeryShort}" />
    </Storyboard>

    <!--  Task Card Animations  -->
    <Storyboard x:Key="TaskCardEnter">
        <DoubleAnimation
            EasingFunction="{StaticResource PowerEaseOut}"
            Storyboard.TargetProperty="Opacity"
            From="0"
            To="1"
            Duration="{StaticResource DurationMedium}" />
        <ThicknessAnimation
            EasingFunction="{StaticResource BackEaseOut}"
            Storyboard.TargetProperty="Margin"
            From="0,20,5,5"
            To="0,5,5,5"
            Duration="{StaticResource DurationMedium}" />
    </Storyboard>

    <Storyboard x:Key="TaskComplete">
        <DoubleAnimation
            AutoReverse="True"
            EasingFunction="{StaticResource ElasticEaseOut}"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
            From="1"
            To="1.05"
            Duration="{StaticResource DurationVeryShort}" />
        <DoubleAnimation
            AutoReverse="True"
            EasingFunction="{StaticResource ElasticEaseOut}"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
            From="1"
            To="1.05"
            Duration="{StaticResource DurationVeryShort}" />
        <ColorAnimation
            EasingFunction="{StaticResource PowerEaseOut}"
            Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)"
            To="#54b163"
            Duration="{StaticResource DurationMedium}" />
    </Storyboard>

    <!--  Page Transition Animations  -->
    <Storyboard x:Key="PageTransitionIn">
        <DoubleAnimation
            EasingFunction="{StaticResource PowerEaseOut}"
            Storyboard.TargetProperty="Opacity"
            From="0"
            To="1"
            Duration="{StaticResource DurationMedium}" />
        <ThicknessAnimation
            EasingFunction="{StaticResource PowerEaseOut}"
            Storyboard.TargetProperty="Margin"
            From="40,0,0,0"
            To="0,0,0,0"
            Duration="{StaticResource DurationMedium}" />
    </Storyboard>

    <Storyboard x:Key="PageTransitionOut">
        <DoubleAnimation
            EasingFunction="{StaticResource PowerEaseIn}"
            Storyboard.TargetProperty="Opacity"
            From="1"
            To="0"
            Duration="{StaticResource DurationMedium}" />
        <ThicknessAnimation
            EasingFunction="{StaticResource PowerEaseIn}"
            Storyboard.TargetProperty="Margin"
            From="0,0,0,0"
            To="-40,0,0,0"
            Duration="{StaticResource DurationMedium}" />
    </Storyboard>

    <!--  Login/Logout Transitions  -->
    <Storyboard x:Key="LoginToMain">
        <!--  Fade out login  -->
        <DoubleAnimation
            EasingFunction="{StaticResource PowerEaseIn}"
            Storyboard.TargetName="LoginContent"
            Storyboard.TargetProperty="Opacity"
            From="1"
            To="0"
            Duration="{StaticResource DurationMedium}" />

        <!--  Scale down login  -->
        <DoubleAnimation
            EasingFunction="{StaticResource PowerEaseIn}"
            Storyboard.TargetName="LoginContent"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
            From="1"
            To="0.9"
            Duration="{StaticResource DurationMedium}" />
        <DoubleAnimation
            EasingFunction="{StaticResource PowerEaseIn}"
            Storyboard.TargetName="LoginContent"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
            From="1"
            To="0.9"
            Duration="{StaticResource DurationMedium}" />

        <!--  After login fades out, begin fading in main content  -->
        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="LoginContent" Storyboard.TargetProperty="Visibility">
            <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="{x:Static Visibility.Collapsed}" />
        </ObjectAnimationUsingKeyFrames>
        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MainContent" Storyboard.TargetProperty="Visibility">
            <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="{x:Static Visibility.Visible}" />
        </ObjectAnimationUsingKeyFrames>

        <!--  Scale up and fade in main content  -->
        <DoubleAnimation
            BeginTime="0:0:0.3"
            EasingFunction="{StaticResource PowerEaseOut}"
            Storyboard.TargetName="MainContent"
            Storyboard.TargetProperty="Opacity"
            From="0"
            To="1"
            Duration="{StaticResource DurationMedium}" />
        <DoubleAnimation
            BeginTime="0:0:0.3"
            EasingFunction="{StaticResource BackEaseOut}"
            Storyboard.TargetName="MainContent"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
            From="1.05"
            To="1"
            Duration="{StaticResource DurationMedium}" />
        <DoubleAnimation
            BeginTime="0:0:0.3"
            EasingFunction="{StaticResource BackEaseOut}"
            Storyboard.TargetName="MainContent"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
            From="1.05"
            To="1"
            Duration="{StaticResource DurationMedium}" />
    </Storyboard>

    <Storyboard x:Key="MainToLogin">
        <!--  Fade out main content  -->
        <DoubleAnimation
            EasingFunction="{StaticResource PowerEaseIn}"
            Storyboard.TargetName="MainContent"
            Storyboard.TargetProperty="Opacity"
            From="1"
            To="0"
            Duration="{StaticResource DurationMedium}" />

        <!--  Scale main content  -->
        <DoubleAnimation
            EasingFunction="{StaticResource PowerEaseIn}"
            Storyboard.TargetName="MainContent"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
            From="1"
            To="1.05"
            Duration="{StaticResource DurationMedium}" />
        <DoubleAnimation
            EasingFunction="{StaticResource PowerEaseIn}"
            Storyboard.TargetName="MainContent"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
            From="1"
            To="1.05"
            Duration="{StaticResource DurationMedium}" />

        <!--  After main content fades out, begin fading in login  -->
        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MainContent" Storyboard.TargetProperty="Visibility">
            <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="{x:Static Visibility.Collapsed}" />
        </ObjectAnimationUsingKeyFrames>
        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="LoginContent" Storyboard.TargetProperty="Visibility">
            <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="{x:Static Visibility.Visible}" />
        </ObjectAnimationUsingKeyFrames>

        <!--  Scale up and fade in login  -->
        <DoubleAnimation
            BeginTime="0:0:0.3"
            EasingFunction="{StaticResource PowerEaseOut}"
            Storyboard.TargetName="LoginContent"
            Storyboard.TargetProperty="Opacity"
            From="0"
            To="1"
            Duration="{StaticResource DurationMedium}" />
        <DoubleAnimation
            BeginTime="0:0:0.3"
            EasingFunction="{StaticResource BackEaseOut}"
            Storyboard.TargetName="LoginContent"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
            From="0.9"
            To="1"
            Duration="{StaticResource DurationMedium}" />
        <DoubleAnimation
            BeginTime="0:0:0.3"
            EasingFunction="{StaticResource BackEaseOut}"
            Storyboard.TargetName="LoginContent"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
            From="0.9"
            To="1"
            Duration="{StaticResource DurationMedium}" />
    </Storyboard>

    <!--  Popup Animations  -->
    <Storyboard x:Key="PopupEnter">
        <DoubleAnimation
            EasingFunction="{StaticResource PowerEaseOut}"
            Storyboard.TargetProperty="Opacity"
            From="0"
            To="1"
            Duration="{StaticResource DurationMedium}" />

        <DoubleAnimation
            EasingFunction="{StaticResource BackEaseOut}"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
            From="0.9"
            To="1"
            Duration="{StaticResource DurationMedium}" />

        <DoubleAnimation
            EasingFunction="{StaticResource BackEaseOut}"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
            From="0.9"
            To="1"
            Duration="{StaticResource DurationMedium}" />
    </Storyboard>

    <Storyboard x:Key="PopupExit">
        <DoubleAnimation
            EasingFunction="{StaticResource PowerEaseIn}"
            Storyboard.TargetProperty="Opacity"
            From="1"
            To="0"
            Duration="{StaticResource DurationShort}" />

        <DoubleAnimation
            EasingFunction="{StaticResource PowerEaseIn}"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
            From="1"
            To="0.9"
            Duration="{StaticResource DurationShort}" />

        <DoubleAnimation
            EasingFunction="{StaticResource PowerEaseIn}"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
            From="1"
            To="0.9"
            Duration="{StaticResource DurationShort}" />
    </Storyboard>

    <!--  Toast Notification Animations  -->
    <Storyboard x:Key="ToastEnter">
        <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="0"
            To="1"
            Duration="0:0:0.3">
            <DoubleAnimation.EasingFunction>
                <PowerEase EasingMode="EaseOut" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>

        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
            From="30"
            To="0"
            Duration="0:0:0.5">
            <DoubleAnimation.EasingFunction>
                <BackEase Amplitude="0.5" EasingMode="EaseOut" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <Storyboard x:Key="ToastExit">
        <DoubleAnimation
            Storyboard.TargetProperty="Opacity"
            From="1"
            To="0"
            Duration="0:0:0.3">
            <DoubleAnimation.EasingFunction>
                <PowerEase EasingMode="EaseIn" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>

        <DoubleAnimation
            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
            From="0"
            To="-20"
            Duration="0:0:0.3">
            <DoubleAnimation.EasingFunction>
                <PowerEase EasingMode="EaseIn" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!--  Theme Transition Animation  -->
    <Storyboard x:Key="ThemeTransition">
        <DoubleAnimation
            AutoReverse="True"
            FillBehavior="Stop"
            Storyboard.TargetName="ThemeTransitionOverlay"
            Storyboard.TargetProperty="Opacity"
            From="0"
            To="0.7"
            Duration="0:0:0.3">
            <DoubleAnimation.EasingFunction>
                <PowerEase EasingMode="EaseIn" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
</ResourceDictionary>