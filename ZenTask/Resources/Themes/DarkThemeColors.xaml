<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  Override theme-specific colors  -->
    <Color x:Key="BackgroundColor">#121212</Color>
    <Color x:Key="SurfaceColor">#1E1E1E</Color>
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#B3FFFFFF</Color>
    <Color x:Key="BorderColor">#3E3E3E</Color>
    <Color x:Key="InputBackgroundColor">#1D2025</Color>

    <!--  System Colors (brighter for dark theme)  -->
    <Color x:Key="ErrorColor">#FF5252</Color>
    <Color x:Key="WarningColor">#FFB74D</Color>
    <Color x:Key="SuccessColor">#66BB6A</Color>
    <Color x:Key="InfoColor">#4FC3F7</Color>
</ResourceDictionary>